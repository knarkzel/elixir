<html>
  <head>
    <% include!("head.stpl"); %>
  </head>
  <body>
    <% include!("nav.stpl"); %>
    <main>
      <% if user.is_some() { %>
        <a href="/thread/create">
          <button>Create new thread</button>
        </a>
      <% } else { %>
        <p>You need to login or create a user in order to create threads.</p>
      <% } %>
      <div id="threads">
        <% for thread in &threads { %>
          <div class="thread-listing"> 
            <% include!("thread_component.stpl"); %>
          </div>
        <% } %>
      </div>
    </main>
  </body>
</html>
