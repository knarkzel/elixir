<html>
  <head>
    <% include!("head.stpl"); %>
  </head>
  <body>
    <% include!("nav.stpl"); %>
    <main>
      <% if user.is_some() { %>
        <a href="/thread/create">
          <button>Create new thread</button>
        </a>
      <% } else { %>
        <p>You need to login or create a user in order to see threads</p>
      <% } %>
      <% for thread in &threads { %>
        <div> 
          <ul>
            <li><%= thread.title %></li>
            <li><%= thread.email %></li>
            <li><%= thread.categories %></li>
            <li><%= thread.published %></li>
          </ul>
        </div>
      <% } %>
    </main>
  </body>
</html>
